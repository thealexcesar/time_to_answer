<!DOCTYPE html>
<html>
  <head>
    <title>Time To Answer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="container col-10">
      <%= alert %> <br> <%= notice %> <br>
      <%= "#{(t'general.welcome')}, #{current_user.name if user_signed_in?}!" %>

      <%= yield %><br><br>

      <%= link_to (t'general.exit'), destroy_user_session_path, method: :delete %>
    </div>
  </body>
</html>
