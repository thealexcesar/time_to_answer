<%= fa_icon 'code', class: "text-danger" %> <br><br><br>
<%= link_to (t'crud.new'), new_user_registration_path %>
<table class="table table-dark container col-xs-12 col-sm-8 col-md-6 col-lg-4 col-xl-4 border shadow">
  <thead>
    <tr>
      <th><%= t("activerecord.attributes.user.name") %></th>
      <th>Email</th>
      <th><%= t("activerecord.attributes.user.created_at") %></th>
      <th><%= t("activerecord.attributes.user.user_type") %></th>
    </tr>
    </thead>
<% @users.each do |user| %>
  <tbody>
    <tr>
      <td><%= user.name.capitalize %></td>
      <td><%= user.email%></td>
      <td><%= l(user.created_at).first(18) %></td>
      <td><%= enum_to_name(user, :user_type) %></td>
    </tr>
  </tbody>
<% end %>
</table>
